<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pw="clr-namespace:Placeworkers.Forms;assembly=Placeworkers.Forms"
    x:Class="Placeworkers.Forms.Demo.NavigationButtonView"
    Title="NavigationButton"
    >
    <ContentPage.Content>
        <StackLayout Padding="5">
            <pw:NavigationButton 
                Text="Navigation" 
                BorderColor="#94c11f" BorderWidth="1" 
                TextColor="#94c11f" BackgroundColor="#DDD" 
                FontAttributes="Bold" Image="ArrowRight" TextPaddingLeft="30"/>
            <pw:NavigationButton 
                Text="Navigation 2" 
                BorderColor="#94c11f" BorderWidth="1" 
                TextColor="#94c11f" BackgroundColor="#DDD" 
                FontAttributes="Bold" TextPaddingLeft="30"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>